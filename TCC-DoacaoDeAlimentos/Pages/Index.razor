@code {
    private string? modalAberto = null;
    private EstatisticasDto estatisticas = new();
    private string tipoCadastro;

    protected override async Task OnInitializedAsync()
    {
        estatisticas = await Http.GetFromJsonAsync<EstatisticasDto>("https://localhost:5001/api/estatisticas");
    }

    private void AbrirModal(string modal)
    {
        modalAberto = modal;
    }

    private void FecharModal()
    {
        modalAberto = null;
    }

    private void SelecionarTipo(ChangeEventArgs e)
    {
        tipoCadastro = e.Value?.ToString();
    }

    private void Redirecionar()
    {
        if (tipoCadastro == "Doador")
            Navigation.NavigateTo("/CadastroDeDoador");
        else if (tipoCadastro == "ONG")
            Navigation.NavigateTo("/CadastroDeOng");
    }
}

